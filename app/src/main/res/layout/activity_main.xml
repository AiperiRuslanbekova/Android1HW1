<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".MainActivity">


 <ImageView
     android:id="@+id/delta"
     android:layout_width="200dp"
     android:layout_height="20dp"
     android:layout_marginStart="150dp"
     android:layout_marginEnd="150dp"
     android:src="@drawable/delta"
     app:layout_constraintBottom_toTopOf="@id/image"
     android:layout_marginBottom="100dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="40dp"
     app:layout_constraintVertical_bias="0.0" />

 <EditText
       android:id="@+id/pass"
       android:layout_width="350dp"
       android:layout_height="50dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@+id/delta"
       app:layout_constraintBottom_toBottomOf="@+id/delta"
       android:layout_marginTop="100dp"
       android:text="Passenger Kathleen Huang"
       android:textColor="@color/black"
     android:background="@android:color/transparent"/>


    <ImageView
        android:id="@+id/image"
        android:background="@color/darkblue"
        android:src="@drawable/ic_baseline_flight_24"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pass"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        android:text="JFK"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/image"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        android:text="NEW YORK CITY"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/image"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginBottom="80dp"
        android:text="DEPART"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/image"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginBottom="40dp"
        android:text="8:00AM"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/image"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        android:text="SEA"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintRight_toRightOf="@id/image"
        android:layout_marginEnd="90sp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_marginTop="60dp"
        android:text="SEATTLE"
        android:textSize="13dp"
        app:layout_constraintRight_toRightOf="@id/image"
        android:layout_marginEnd="110sp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginBottom="80dp"
        android:text="ARRIVE"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/image"
        android:layout_marginEnd="110sp"
        android:background="@android:color/transparent"/>
    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="@id/image"
    android:layout_marginBottom="40dp"
    android:text="11:17AM"
    android:textColor="@color/white"
    android:textSize="30dp"
    app:layout_constraintRight_toRightOf="@id/image"
    android:layout_marginEnd="45sp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="50dp"
        android:text="BOARDING BEGINS"
        android:textSize="13dp"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="70dp"
        android:text="7:30AM"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="130dp"
        android:text="GATE"
        android:textSize="13sp"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="150dp"
        android:text="D4"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:text="SEAT"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp"
        android:text="3C"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="130dp"
        android:text="FLIGHT"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:background="@android:color/transparent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="100dp"
        android:text="D2218"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="@drawable/image"
 app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="500dp"
 app:layout_constraintLeft_toLeftOf="parent"
 android:layout_marginStart="200dp"
 app:layout_constraintRight_toRightOf="parent"
 android:layout_marginEnd="50dp"
 app:layout_constraintBottom_toBottomOf="parent"
 android:layout_marginBottom="50dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>